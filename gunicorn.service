[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/root/.jenkins/workspace/django-app/
ExecStart=/root/.jenkins/workspace/django-app/env/bin/gunicorn --access-logfile /root/.jenkins/workspace/django-app/logs/error.log - --workers 3 --bind unix:/run/gunicorn.sock myproject.wsgi:application

[Install]
WantedBy=multi-user.target